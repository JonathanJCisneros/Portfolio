@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

@section Styles {
    <link rel="stylesheet" href="~/css/user/register@(Minified()).css" asp-append-version="true" />
}

<header>
    <h1>Register</h1>
</header>
<form asp-controller="User" asp-action="Register" method="POST">
    <div>
        <label asp-for="FirstName" class="form-label"></label>
        <span asp-validation-for="FirstName" class="error"></span>
        <input asp-for="FirstName" class="form-control">
    </div>
    <div>
        <label asp-for="LastName" class="form-label"></label>
        <span asp-validation-for="LastName" class="error"></span>
        <input asp-for="LastName" class="form-control">
    </div>
    <div>
        <label asp-for="Email" class="form-label"></label>
        <span asp-validation-for="Email" class="error"></span>
        <input asp-for="Email" class="form-control">
    </div>
    <div>
        <label asp-for="Password" class="form-label"></label>
        <span asp-validation-for="Password" class="error"></span>
        <input asp-for="Password" class="form-control">
    </div>
    <div>
        <label asp-for="ConfirmPassword" class="form-label"></label>
        <span asp-validation-for="ConfirmPassword" class="error"></span>
        <input asp-for="ConfirmPassword" class="form-control">
    </div>
    <div>
        <label asp-for="AdminPass" class="form-label"></label>
        <span asp-validation-for="AdminPass" class="error"></span>
        <input asp-for="AdminPass" class="form-control" value="00000">
    </div>
    <div>
        <button type="submit" class="submit-button">Register</button>
    </div>    
</form>
<div class="back">
    <a asp-controller="Portfolio" asp-action="Home" class="submit-button return">Got lost? Let's go home!</a>
</div>